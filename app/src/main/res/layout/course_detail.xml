<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toTopOf="parent"
        android:minHeight="0dp"
        android:minWidth="0dp"
        />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAF8EC"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <TextView
        android:paddingLeft ="10dp"
        android:id="@+id/topicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên chủ đề"
        app:layout_constraintTop_toBottomOf="@id/pic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_horizontal"
        />
    <TextView
        android:paddingLeft ="10dp"
        android:id="@+id/topicRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Độ khó chủ đề"
        app:layout_constraintTop_toBottomOf="@id/topicName"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <TextView
        android:paddingLeft ="10dp"
        android:id="@+id/topicDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả chủ đề"
        app:layout_constraintTop_toBottomOf="@id/topicRate"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:paddingLeft ="10dp"
        android:id="@+id/topicMission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhiệm vụ"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topicDescription"
        />
    <TextView
        android:paddingLeft ="10dp"
        android:id="@+id/topicMission_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topicMission"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Test"
        />
    <Button
        android:textColor="#0C988B"
        android:textSize="20dp"
        android:id="@+id/btnSuggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:backgroundTint="#BAE3E8"
        android:text="Mẫu câu nên dùng"
        android:layout_marginRight="50dp"
        app:layout_constraintBottom_toTopOf="@id/btnStart"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:textSize="20dp"
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:backgroundTint="#0C988B"
        android:layout_marginRight="50dp"
        android:text="Bắt đầu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>