<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseMainActivity">

    <TextView
        android:id="@+id/Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lời tựa trang course_main!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toRightOf="@id/Details"
        app:layout_constraintBaseline_toTopOf="parent"
        android:src="@drawable/topic_main_icon"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:id="@+id/subject1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chủ đề cơ bản"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBottomOf="@id/pic1"
        app:layout_constraintBottom_toBottomOf="@id/pic1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subject1">
    <ImageButton
        android:id="@+id/Topic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contextClickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />
    <ImageButton
        android:id="@+id/Topic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contextClickable="true"
        app:layout_constraintLeft_toRightOf="@id/Topic1"
        android:src="@drawable/ic_launcher_background"
        android:layout_toRightOf="@id/Topic1"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"

        />

        <ImageButton
            android:id="@+id/Topic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contextClickable="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/favorite_subject"
            android:layout_toRightOf="@id/Topic2"
            app:layout_constraintLeft_toRightOf="@id/Topic2" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
