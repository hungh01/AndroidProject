<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lời tựa trang course_main!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <ImageView
        android:id="@+id/pic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toRightOf="@id/Details"
        app:layout_constraintBaseline_toTopOf="parent"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:id="@+id/subject1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên chủ đề"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBottomOf="@id/pic1"
        />
    <ImageButton
        android:id="@+id/Topic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contextClickable="true"
        app:layout_constraintTop_toBottomOf="@id/subject1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintHorizontal_weight="1"
        />
    <ImageButton
        android:id="@+id/Topic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contextClickable="true"
        app:layout_constraintTop_toBottomOf="@id/subject1"
        app:layout_constraintLeft_toRightOf="@id/Topic1"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintHorizontal_weight="1"
        />
    <ImageButton
        android:id="@+id/Topic3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contextClickable="true"
        app:layout_constraintTop_toBottomOf="@id/subject1"
        app:layout_constraintLeft_toRightOf="@id/Topic2"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintHorizontal_weight="1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
